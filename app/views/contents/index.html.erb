<header class="home-header">
  <%= render "header" %>
</header>
<div class="wrapper mycontents">
  <div class="main">
    <div class="main-header">
      <div class="main-header-left">
        <%= link_to "マイコンテンツ", root_path %>
      </div>
      <div class="main-header-right">
        <%= link_to "トライコンテンツ", content_tries_path(:id) %>
      </div>
    </div>
    <%= search_form_for @q do |f| %>
      <%= render partial: "search", locals: { f: f } %>
      <% if @contents.present? %>
        <div class="main-contents">
          <%= render partial: "content", collection: @contents %>
        </div>
      <% else %>
        <div class="content-empty-message">
          一致するコンテンツがありません。
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="post">
  <%= render "post" %>
</div>