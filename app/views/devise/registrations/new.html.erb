<div class="account-page">
  <div class="account-page-upper">
    <div class="account-page-title">
      Co-Garden<span><i class="fa fa-leaf fa-fw"></i></span>
    </div>
    <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="account-page-wrapper">
        <div class="field">
          <%= f.label :nickname %><br>
          <%= f.text_field :nickname, placeholder: "全角30文字以内", autofocus: true, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :user_name %><br>
          <%= f.text_field :user_name, placeholder: "半角英数字30文字以内", class: "input" %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, placeholder: "半角英数字6文字以上", autocomplete: "off", class: "input" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
        </div>
        <div class="actions">
          <%= f.submit "登録する", class: "submit-btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="account-page-lower">
    <div class="account-page-lower-left">
      アカウントをお持ちですか？
    </div>
    <div class="account-page-lower-right">
      <%= link_to "ログインする", new_user_session_path %>
    </div>
  </div>
</div>